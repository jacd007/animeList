<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <EditText
                android:id="@+id/edItemTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="@string/app_name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:id="@+id/ivItemImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:src="@drawable/ic_no_image"/>
        </LinearLayout>

        <!--  -->
        <LinearLayout
            android:layout_weight="0.3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="0dp">

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="Capitulo:"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spnItemCap"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="Estado:"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spnItemStatus"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="Proximo Episodio:"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spnItemNextDay"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="Color:"/>

                <android.support.v7.widget.AppCompatSpinner
                    android:id="@+id/spnItemColor"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:layout_height="match_parent"
                    android:text="@string/app_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/tvDateCr"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="F. Creado"/>

                <TextView
                    android:id="@+id/tvDateUp"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="match_parent"
                    android:text="F. Editado"/>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_weight="0.1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center">

            <Button
                android:id="@+id/btnItemSave"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/cvPosGreen"
                android:background="@drawable/button_background_circular"
                android:layout_height="wrap_content"
                android:text="Guardar"/>

            <Button
                android:id="@+id/btnItemCancel"
                android:layout_weight="0.5"
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:textColor="@color/cvPosRed"
                android:background="@drawable/button_background_circular_x"
                android:layout_height="wrap_content"
                android:text="Cancelar EdiciÃ³n"/>

        </LinearLayout>



    </LinearLayout>

</android.support.constraint.ConstraintLayout>