<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zippyttech.animelist.view.activity.ChangeDataActivity"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarStyle="insideOverlay"
        tools:ignore="UselessParent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="5dp">

                <!-- head -->
                <LinearLayout
                    android:layout_weight="0.08"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <EditText
                        android:id="@+id/etItemTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:focusedByDefault="false"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:text="@string/app_name"/>
                </LinearLayout>

                <!-- image -->
                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <ImageView
                        android:id="@+id/ivItemImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_no_image"/>
                </LinearLayout>

                <!-- body -->

                <!-- body from text -->
                <LinearLayout
                    android:layout_weight="0.44"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="0dp">

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:gravity="start|center"
                            android:layout_height="match_parent"
                            android:text="Capitulo:"/>

                        <LinearLayout
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <EditText
                                android:id="@+id/etItemCapitule"
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:inputType="number"
                                android:textSize="15dp"
                                android:focusedByDefault="false"
                                android:layout_height="match_parent"
                                android:text=""/>

                            <ImageButton
                                android:id="@+id/ivAdd1"
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:layout_margin="10dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background_circular"
                                android:src="@drawable/ic_add_one"/>

                            <ImageButton
                                android:id="@+id/ivSust1"
                                android:layout_weight="0.3"
                                android:layout_width="0dp"
                                android:layout_margin="10dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/button_background_circular_x"
                                android:src="@drawable/ic_sustract"/>

                        </LinearLayout>



                        <!--<android.support.v7.widget.AppCompatSpinner-->
                        <!--android:id="@+id/spnItemCap"-->
                        <!--android:layout_weight="0.6"-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_margin="5dp"-->
                        <!--android:textAlignment="center"-->
                        <!--android:gravity="center"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:text="@string/app_name"/>-->

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:gravity="start|center"
                            android:layout_height="match_parent"
                            android:text="Estado:"/>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spnItemStatus"
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="@string/app_name"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <TextView
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:gravity="start|center"
                            android:layout_height="match_parent"
                            android:text="Proximo Episodio:"/>

                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spnItemNextDay"
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="@string/app_name"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_height="0dp">

                        <LinearLayout
                            android:layout_weight="0.4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_weight="0.4"
                                android:layout_width="0dp"
                                android:gravity="start|center"
                                android:layout_height="match_parent"
                                android:text="Color:"/>
                            <View
                                android:layout_weight="0.2"
                                android:id="@+id/vItemColor"
                                android:background="@color/cvWhite"
                                android:layout_gravity="center"
                                android:layout_margin="2dp"
                                android:layout_width="0dp"
                                android:layout_height="30dp"/>

                        </LinearLayout>



                        <android.support.v7.widget.AppCompatSpinner
                            android:id="@+id/spnItemColor"
                            android:layout_weight="0.6"
                            android:layout_width="0dp"
                            android:textAlignment="center"
                            android:gravity="center"
                            android:layout_height="match_parent"
                            android:text="@string/app_name"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="0.2"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="5dp"
                        android:layout_height="0dp">

                        <TextView
                            android:id="@+id/tvDateItemCr"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:gravity="start|center"
                            android:layout_height="match_parent"
                            android:text="F. Creado"/>

                        <TextView
                            android:id="@+id/tvDateItemUp"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:gravity="end|center"
                            android:layout_height="match_parent"
                            android:text="F. Editado"/>

                    </LinearLayout>

                </LinearLayout>

                <!-- footer -->
                <LinearLayout
                    android:layout_weight="0.08"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="3dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnItemSave"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/cvPosGreen"
                        android:background="@drawable/button_background_circular"
                        android:layout_height="wrap_content"
                        android:text="Guardar"/>

                    <Button
                        android:id="@+id/btnItemCancel"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_margin="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/cvPosRed"
                        android:background="@drawable/button_background_circular_x"
                        android:layout_height="wrap_content"
                        android:text="Cancelar EdiciÃ³n"/>

                </LinearLayout>

            </LinearLayout>
    </ScrollView>






</LinearLayout>
