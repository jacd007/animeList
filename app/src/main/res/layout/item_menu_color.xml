<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:baselineAligned="false"
                android:orientation="vertical">

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5">
                    
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.25">
                        <ImageButton
                            android:id="@+id/ivbtnColor1"
                            android:layout_width="@dimen/nav_menu_item"
                            android:layout_height="@dimen/nav_menu_item"
                            android:background="@drawable/ic_color_1"
                            android:contentDescription="edit item"
                            app:srcCompat="@drawable/ic_color_1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.25">
                        <ImageButton
                            android:id="@+id/ivbtnColor2"
                            android:layout_width="@dimen/nav_menu_item"
                            android:layout_height="@dimen/nav_menu_item"
                            android:background="@drawable/ic_color_2"
                            android:contentDescription="edit item"
                            app:srcCompat="@drawable/ic_color_2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.25">
                        <ImageButton
                            android:id="@+id/ivbtnColor3"
                            android:layout_width="@dimen/nav_menu_item"
                            android:layout_height="@dimen/nav_menu_item"
                            android:background="@drawable/ic_color_3"
                            android:contentDescription="edit item"
                            app:srcCompat="@drawable/ic_color_3"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="0.25">
                        <ImageButton
                            android:id="@+id/ivbtnColor4"
                            android:layout_width="@dimen/nav_menu_item"
                            android:layout_height="@dimen/nav_menu_item"
                            android:background="@drawable/ic_color_4"
                            android:contentDescription="edit item"
                            app:srcCompat="@drawable/ic_color_4"/>
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.25">
                    <ImageButton
                        android:id="@+id/ivbtnColor5"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/ic_color_5"
                        android:contentDescription="edit item"
                        app:srcCompat="@drawable/ic_color_5"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.25">
                    <ImageButton
                        android:id="@+id/ivbtnColor6"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/ic_color_6"
                        android:contentDescription="edit item"
                        app:srcCompat="@drawable/ic_color_6"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.25">
                    <ImageButton
                        android:id="@+id/ivbtnColor7"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/ic_color_7"
                        android:contentDescription="edit item"
                        app:srcCompat="@drawable/ic_color_7"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.25">
                    <ImageButton
                        android:id="@+id/ivbtnColor8"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/ic_color_8"
                        android:contentDescription="edit item"
                        app:srcCompat="@drawable/ic_color_8"/>
                </LinearLayout>
                
            </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>