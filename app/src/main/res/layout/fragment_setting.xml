<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zippyttech.animelist.view.fragment.SettingFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <!-- title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textAlignment="center"
            android:text="@string/app_name"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <!-- content -->
            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/swEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/title_switch_email"/>

                <TextView
                    android:id="@+id/tvDescription1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/text_description_1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/cvBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/swTextMoved"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/title_switch_moved"/>

                <TextView
                    android:id="@+id/tvDescription2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/description_2"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/cvBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/swNotification"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="@string/title_switch_notificacion"/>

                <TextView
                    android:id="@+id/tvDescription3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/description_3"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/cvBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/swItemType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Habilitar / Desabilitar  Tarjetas rectangulares"/>

                <TextView
                    android:id="@+id/tvDescription5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/app_name"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/cvBlack"/>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"/>

                <EditText
                    android:id="@+id/etContent"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:enabled="false"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.15"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">
                <Switch
                    android:id="@+id/swTextSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:text="Habilitar / Desabilitar  Multi-linea"/>

                <TextView
                    android:id="@+id/tvDescription4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lines="4"
                    android:paddingLeft="10dp"
                    android:paddingRight="20dp"
                    android:text="@string/app_name"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="@color/cvBlack"/>
            </LinearLayout>
            <!-- content -->

        </LinearLayout>





    </LinearLayout>


</FrameLayout>
