<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zippyttech.animelist.view.activity.SearchActivity"
    android:orientation="vertical">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- toolbar -->
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarSe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorPrimary"
            android:elevation="4dp"
            android:pointerIcon="text"
            android:splitMotionEvents="true"
            android:subtitleTextColor="@color/colorPrimaryDark"
            android:titleTextAppearance="@color/colorPrimaryDark"
            android:titleTextColor="@color/colorPrimaryDark"
            android:visibility="visible"
            app:popupTheme="@color/colorPrimary"
            app:title="@string/Busqueda"
            app:titleTextAppearance="@color/colorPrimaryDark"
            app:titleTextColor="@color/colorPrimaryDark"
            tools:targetApi="n">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"
                    android:textColor="@color/cvWhite"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@color/semiTrans"
                    android:text="xxx"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_list"
                android:contentDescription="TODO" />
        </android.support.v7.widget.Toolbar>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_weight="0.02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_weight="0.15"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Imagen"/>
                    <TextView
                        android:layout_weight="0.75"
                        android:gravity="center"
                        android:layout_margin="3dp"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Titulo del anime, estado y fecha"/>
                    <TextView
                        android:layout_weight="0.1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Capitulo"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_margin="3dp"
                        android:gravity="end|center" />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.97"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rvList"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvSize"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="text"/>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </android.support.design.widget.CoordinatorLayout>

</LinearLayout>
