<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@color/cvBlue"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cvWhite"
                    android:layout_margin="5dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_weight="0.3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Titulo:"/>
                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:hint="titulo del anime"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/cvWhite"
                    android:layout_margin="5dp"
                    android:padding="5dp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Capitulo:"/>
                    <EditText
                        android:id="@+id/et_capitule"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:hint="capitulo"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#85c7d2cd"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp">

                    <LinearLayout
                        android:id="@+id/cvColorBlue"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvBlue"
                        tools:ignore="UnusedAttribute"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorBlack"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvBlack"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorWhite"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvWhite"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorYellow"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvYellow"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorGreen"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvGreen"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorRed"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvRed"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/cvColorViolet"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@color/cvViolet"
                        tools:targetApi="lollipop"
                        android:orientation="horizontal" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/btnBackItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_back"/>

                    <ImageButton
                        android:id="@+id/btnClearItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_clear"/>

                    <ImageButton
                        android:id="@+id/btnAddItem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:layout_margin="5dp"
                        android:src="@drawable/ic_add"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>