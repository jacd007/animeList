<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:gravity="bottom"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="3dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_text_trans">

            <TextView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/cvWhite"
                android:text="ID"/>
            <TextView
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textStyle="bold"
                android:textColor="@color/cvWhite"
                android:text="Titulo"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvId"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/cvWhite"
                android:gravity="center"
                android:text="000"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_weight="0.9"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:textColor="@color/cvWhite"
                android:text="@string/app_name"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:gravity="center"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardBackgroundColor="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <ImageButton
                        android:id="@+id/ivbtnOp1"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/button_background"
                        android:contentDescription="edit item"
                        app:srcCompat="@drawable/ic_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <ImageButton
                        android:id="@+id/ivbtnOp2"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/button_background"
                        android:contentDescription="edit color"
                        app:srcCompat="@drawable/ic_paint_color" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <ImageButton
                        android:id="@+id/ivbtnOp3"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/button_background"
                        android:contentDescription="closed anime"
                        app:srcCompat="@drawable/ic_doc_edit" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <ImageButton
                        android:id="@+id/ivbtnOp4"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/button_background"
                        android:contentDescription="add one"
                        app:srcCompat="@drawable/ic_add_one"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.2">
                    <ImageButton
                        android:id="@+id/ivbtnOp5"
                        android:layout_width="@dimen/nav_menu_item"
                        android:layout_height="@dimen/nav_menu_item"
                        android:background="@drawable/button_background"
                        android:contentDescription="add one"
                        app:srcCompat="@drawable/ic_sustract"
                        tools:ignore="VectorDrawableCompat" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>